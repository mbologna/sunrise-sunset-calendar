{
    "name": "michele/sunrise-sunset-calendar",
    "description": "High-precision iCalendar feed generator for sunrise, sunset, and twilight times using NREL SPA algorithms",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "abbadon1334/sun-position-spa-php": "^1.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^9.6 || ^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "test:unit": "./vendor/bin/phpunit --testsuite Unit",
        "test:coverage": "./vendor/bin/phpunit --coverage-html coverage/",
        "analyse": "./vendor/bin/phpstan analyse",
        "lint": "./vendor/bin/phpcs --standard=PSR12 sunrise-sunset-calendar.php src/",
        "lint:fix": "./vendor/bin/phpcbf --standard=PSR12 sunrise-sunset-calendar.php src/",
        "check": "php tools/validate-project.php",
        "check:ical": "php tools/validate-ical.php",
        "check:all": ["@test", "@analyse", "@lint"]
    }
}
